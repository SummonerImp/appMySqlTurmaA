@model IEnumerable<appMySqlTurmaA.Models.Categoria>

@{
    ViewBag.Title = "Listar";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Criar novo Registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {item.idCategoria, item.nome, item.descricao }) |
            @Html.ActionLink("Delete", "Delete", new { item.idCategoria, item.nome, item.descricao })
        </td>
    </tr>
}

</table>
